<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter to-do title"/>

    <EditText
        android:id="@+id/et_add_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_add_title"
        android:hint="Enter explanation"
        />

    <EditText
        android:id="@+id/et_add_date_time"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_add_explanation"
        android:hint="Enter date and time"
        />

    <EditText
        android:id="@+id/et_add_place"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_add_date_time"
        android:layout_alignBottom="@+id/et_add_date_time"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:hint="Enter place" />

    <Button
        android:id="@+id/bt_add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_add_place"
        android:layout_alignParentRight="true"
        android:text="Add To-Do!" />

</RelativeLayout>