<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">
    <TextView
        android:id="@+id/tv_title_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_date_list_item"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_list_item"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_place_list_item"
        android:layout_toStartOf="@+id/tv_place_list_item" />

    <TextView
        android:id="@id/tv_place_list_item"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_title_list_item" />
</RelativeLayout>